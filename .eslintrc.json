{
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended"
	],
	"env": {
		"node": true,
		"commonjs": false,
		"es6": true
	},
	"globals": {
		"document": true
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"no-trailing-spaces": [
			"error"
		],
		"space-infix-ops": "error",
		"require-await": "error",
		"keyword-spacing": "error",
		"comma-dangle": [
			"error",
			"never"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"no-empty": [
			"error",
			{
				"allowEmptyCatch": true
			}
		]
	}
}